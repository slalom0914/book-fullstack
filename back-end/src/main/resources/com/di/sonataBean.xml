<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <bean id="myCar" class="com.example.demo.di.Sonata" scope="singleton" init-method="init"/>
    <bean id="himCar" class="com.example.demo.di.Sonata" scope="prototype">
        <constructor-arg index="0" type="java.lang.String" value="흰색"/>
        <constructor-arg index="1" type="int" value="50"/>
    </bean>
    <bean id="herCar" class="com.example.demo.di.Sonata">
        <constructor-arg index="0" type="java.lang.String" value="핑크색"/>
        <constructor-arg index="1" type="int" value="30"/>
        <constructor-arg index="2" type="int" value="4"/>
    </bean>
</beans>